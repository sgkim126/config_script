if [ "$PS1" ]; then
    if [ "$BASH" ] && [ "$BASH" != "/bin/sh" ]; then
        # The file bash.bashrc already sets the default PS1.
        # PS1='\h:\w\$ '
        if [ -f /etc/bash.bashrc ]; then
            source /etc/bash.bashrc
        fi
        # include .bashrc if it exists
        if [ -f "$HOME/.bashrc" ]; then
            source "$HOME/.bashrc"
        fi
    elif [ "`id -u`" -eq 0 ]; then
        PS1='# '
    else
        PS1='$ '
    fi
fi

if [ -f "$HOME/.bash_complete.d" ]
then
    source "$HOME/.bash_complete.d"
fi

export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew";
if [ -d "$HOMEBREW_PREFIX" ]
then
    export HOMEBREW_REPOSITORY="/home/linuxbrew/.linuxbrew/Homebrew";
    export PATH="/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin${PATH+:$PATH}";
    export MANPATH="/home/linuxbrew/.linuxbrew/share/man${MANPATH+:$MANPATH}:";
    export INFOPATH="/home/linuxbrew/.linuxbrew/share/info:${INFOPATH:-}";

    if which pyenv > /dev/null; then
        eval "$(pyenv init -)"
    fi
    if which pyenv-virtualenv-init > /dev/null; then
        eval "$(pyenv virtualenv-init -)"
    fi
    if [ -e "$HOMEBREW_PREFIX/bin/yarn" ] ; then
        export PATH="$($HOMEBREW_PREFIX/bin/yarn global bin):$PATH"
    fi
    if [ -d "$HOMEBREW_PREFIX/opt/go/libexec/bin" ] ; then
        export PATH="$PATH:$HOMEBREW_PREFIX/opt/go/libexec/bin"
    fi

    if [ -d "$HOME/.nvm" ] ; then
        export NVM_DIR="$HOME/.nvm"
    fi
    if [ -f "$HOMEBREW_PREFIX/opt/nvm/nvm.sh" ] ; then
        source "$HOMEBREW_PREFIX/opt/nvm/nvm.sh"
    fi
fi

if [ -d "$HOME/.rvm/bin" ] ; then
    export PATH="${PATH}:$HOME/.rvm/bin"
fi

if [ -d "/usr/lib/jvm/java-9-oracle/" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-9-oracle/"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-8-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-7-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-7-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
fi

if [ -d "$HOME/.go" ]
then
    export GOPATH="$HOME/.go"
    export GOROOT="$(brew --prefix go)/libexec"
    export PATH="$GOPATH/bin:$GOROOT/bin:$PATH"
fi

if [ -d "$HOME/.root/bin" ] ; then
    export PATH="$HOME/.root/bin:$PATH"
fi

export TZ='Asia/Seoul';

if [ -d "$HOME/.cargo/bin" ]
then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

# vim:set ft=sh:

export PATH="$HOME/.cargo/bin:$PATH"
