if [ "$PS1" ]; then
    if [ "$BASH" ] && [ "$BASH" != "/bin/sh" ]; then
        # The file bash.bashrc already sets the default PS1.
        # PS1='\h:\w\$ '
        if [ -f /etc/bash.bashrc ]; then
            source /etc/bash.bashrc
        fi
        # include .bashrc if it exists
        if [ -f "$HOME/.bashrc" ]; then
            source "$HOME/.bashrc"
        fi
    elif [ "`id -u`" -eq 0 ]; then
        PS1='# '
    else
        PS1='$ '
    fi
fi

if [ -f "$HOME/.bash_complete.d" ]
then
    source "$HOME/.bash_complete.d"
fi

LINUXBREW="$HOME/.linuxbrew"
if [ -d "$LINUXBREW" ]
then
    export PATH="$LINUXBREW/bin:$PATH"
    export MANPATH="$($LINUXBREW/bin/brew --prefix)/share/man:$MANPATH"
    export INFOPATH="$($LINUXBREW/bin/brew --prefix)/share/info:$INFOPATH"
    export LD_LIBRARY_PATH="$($LINUXBREW/bin/brew --prefix)/lib:$LD_LIBRARY_PATH"
    export C_INCLUDE_PATH="$($LINUXBREW/bin/brew --prefix)/include:$C_INCLUDE_PATH"
    export CPLUS_INCLUDE_PATH="$($LINUXBREW/bin/brew --prefix)/include:$CPLUS_INCLUDE_PATH"

    if [ -e "$LINUXBREW/bin/pyenv" ] ; then
        eval "$($LINUXBREW/bin/pyenv init -)"
    fi
fi
unset LINUXBREW

if [ -d "$HOME/.rvm/bin" ] ; then
    export PATH="${PATH}:$HOME/.rvm/bin"
fi

if [ -d "/usr/lib/jvm/java-9-oracle/" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-9-oracle/"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-8-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-7-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-7-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
fi

if [ -d "$HOME/.go" ]
then
    export GOPATH="$HOME/.go"
    export PATH="$GOPATH/bin:$PATH"
fi

if [ -d "$HOME/.root/bin" ] ; then
    export PATH="$HOME/.root/bin:$PATH"
fi

export TZ='Asia/Seoul';

if [ -d "$HOME/.cargo/bin" ]
then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

# vim:set ft=sh:
