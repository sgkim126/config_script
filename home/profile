if [ "$PS1" ]; then
    if [ "$BASH" ] && [ "$BASH" != "/bin/sh" ]; then
        # The file bash.bashrc already sets the default PS1.
        # PS1='\h:\w\$ '
        if [ -f /etc/bash.bashrc ]; then
            source /etc/bash.bashrc
        fi
        # include .bashrc if it exists
        if [ -f "$HOME/.bashrc" ]; then
            source "$HOME/.bashrc"
        fi
    elif [ "`id -u`" -eq 0 ]; then
        PS1='# '
    else
        PS1='$ '
    fi
fi

if [ -f "$HOME/.bash_completion" ]
then
    source "$HOME/.bash_completion"
fi

if [ -d "$HOME/.rvm/bin" ] ; then
    export PATH="${PATH}:$HOME/.rvm/bin"
fi

if [ -d "$HOME/.root" ] ; then
    export PREFIX="$HOME/.root"
    if [ -d "$PREFIX/bin" ] ; then
        export PATH="$PREFIX/bin:$PATH"
    fi
    if [ -d "$PREFIX/lib" ] ; then
        export LD_LIBRARY_PATH="$PREFIX/lib:$LD_LIBRARY_PATH"
    fi
fi

LINUXBREW_PREFIX="$HOME/.linuxbrew"
if [ -d "$LINUXBREW_PREFIX/bin" ]
then
    export PATH="$LINUXBREW_PREFIX/bin:$PATH"
fi
if [ -d "$LINUXBREW_PREFIX/share/man" ]
then
    export MANPATH="$LINUXBREW_PREFIX/share/man:$MANPATH"
fi
if [ -d "$LINUXBREW_PREFIX/share/info" ]
then
    export INFOPATH="$LINUXBREW_PREFIX/share/info:$INFOPATH"
fi

if [ -f "$LINUXBREW_PREFIX/etc/bash_completion.d/" ]
then
    source "$LINUXBREW_PREFIX/etc/bash_completion.d/"
fi

if [ -d "$LINUXBREW_PREFIX/Library/LinkedKegs/jdk" ]
then
    export JAVA_HOME="$LINUXBREW_PREFIX/Library/LinkedKegs/jdk"
fi

if [ -d "$LINUXBREW_PREFIX/Library/LinkedKegs/scala/libexec" ]
then
    export SCALA_HOME="$LINUXBREW_PREFIX/Library/LinkedKegs/scala/libexec"
fi

if [ -d $LINUXBREW_PREFIX/opt/go/libexec/bin ]
then
    export PATH="$LINUXBREW_PREFIX/opt/go/libexec/bin:$PATH"
    if [ -d "$LINUXBREW_PREFIX/opt/go" ]
    then
        export GOPATH="$LINUXBREW_PREFIX/opt/go"
    fi
fi

if [ -d $LINUXBREW_PREFIX/opt/bin ]
then
    export PATH="$LINUXBREW_PREFIX/opt/bin:$PATH"
fi

unset LINUXBREW_PREFIX

export TZ='Asia/Seoul';

# vim:set ft=sh:
