if [ "$PS1" ]; then
    if [ "$BASH" ] && [ "$BASH" != "/bin/sh" ]; then
        # The file bash.bashrc already sets the default PS1.
        # PS1='\h:\w\$ '
        if [ -f /etc/bash.bashrc ]; then
            source /etc/bash.bashrc
        fi
        # include .bashrc if it exists
        if [ -f "$HOME/.bashrc" ]; then
            source "$HOME/.bashrc"
        fi
    elif [ "`id -u`" -eq 0 ]; then
        PS1='# '
    else
        PS1='$ '
    fi
fi

if [ -f "$HOME/.bash_completion" ]
then
    source "$HOME/.bash_completion"
fi

if [ -d "$HOME/.rvm/bin" ] ; then
    export PATH="${PATH}:$HOME/.rvm/bin"
fi

if [ -d "/usr/lib/jvm/java-9-oracle/" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-9-oracle/"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-8-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "/usr/lib/jvm/java-7-openjdk-amd64" ] ; then
    export JAVA_HOME="/usr/lib/jvm/java-7-openjdk-amd64"
    export PATH="$JAVA_HOME/bin:$PATH"
fi

if [ -d "$HOME/.root" ] ; then
    export PREFIX="$HOME/.root"

    export PATH="$PREFIX/bin:$PATH"

    export LD_LIBRARY_PATH="$PREFIX/lib:$LD_LIBRARY_PATH"

    export C_INCLUDE_PATH="$PREFIX/include:$C_INCLUDE_PATH"
    export CPLUS_INCLUDE_PATH="$PREFIX/include:$CPLUS_INCLUDE_PATH"

    export MANPATH="$PREFIX/share/man:$MANPATH"
    export INFOPATH="$PREFIX/share/info:$INFOPATH"

    if [ -f "$PREFIX/etc/bash_completion.d/" ]
    then
        source "$PREFIX/etc/bash_completion.d/"
    fi

    if [ -d "$PREFIX/go" ]
    then
        export GOPATH="$HOME/.go"
        export GOROOT="$PREFIX/go"
        export PATH="$GOROOT/bin:$PATH"
    fi

    if [ -d "$PREFIX/scala" ]
    then
        export SCALA_HOME="$PREFIX/scala"
        export PATH="$SCALA_HOME/bin:$PATH"
        export LD_LIBRARY_PATH="$SCALA_HOME/lib:$LD_LIBRARY_PATH"
        export MANPATH="$SCALA_HOME/man:$MANPATH"
    fi

    if [ -d "$PREFIX/ant" ]
    then
        export ANT_HOME="$PREFIX/ant"
        export PATH="$ANT_HOME/bin:$PATH"
        export LD_LIBRARY_PATH="$ANT_HOME/lib:$LD_LIBRARY_PATH"
    fi

    if [ -d "$PREFIX/node" ]
    then
        export PATH="$PREFIX/node/bin:$PATH"
        export LD_LIBRARY_PATH="$PREFIX/node/lib:$LD_LIBRARY_PATH"
        export MANPATH="$PREFIX/node/man:$MANPATH"
        export C_INCLUDE_PATH="$PREFIX/node/include:$C_INCLUDE_PATH"
        export CPLUS_INCLUDE_PATH="$PREFIX/node/include:$CPLUS_INCLUDE_PATH"
    fi

    if [ -d "$PREFIX/cmake" ]
    then
        export PATH="$PREFIX/cmake/bin:$PATH"
        export LD_LIBRARY_PATH="$PREFIX/cmake/lib:$LD_LIBRARY_PATH"
        export MANPATH="$PREFIX/cmake/man:$MANPATH"
    fi

    if [ -d "$PREFIX/hadoop" ]
    then
        export HADOOP_HOME="$PREFIX/hadoop"
        export PATH="$HADOOP_HOME/bin:$PATH"
    fi

    if [ -d "$PREFIX/pyenv" ]
    then
        export PYENV_ROOT="$PREFIX/pyenv"
        export PATH="$PYENV_ROOT/bin:$PATH"
    fi
fi

export TZ='Asia/Seoul';

# vim:set ft=sh:
